<monitor>
	<name>SolrMonitor</name>
	<type>managed</type>
	<description>Monitors Solr</description>
	<monitor-configuration></monitor-configuration>
	<monitor-run-task>
		<execution-style>periodic</execution-style>
		<execution-frequency-in-seconds>60</execution-frequency-in-seconds>
		<name>Solr Monitor Run Task</name>
		<display-name>Solr Monitor Task</display-name>
		<description>Solr Monitor Task</description>
		<type>java</type>
		<execution-timeout-in-secs>60</execution-timeout-in-secs>
		<task-arguments>
			<argument name="host" is-required="true" default-value="localhost" />
			<argument name="port" is-required="true" default-value="8983" />
			<!-- Configure proxy parameters if any -->
			<argument name="proxy-host" is-required="false" default-value=""/>
			<argument name="proxy-port" is-required="false" default-value=""/>
			<!-- CONFIGURE Solr webapp root path (OPTIONAL): 
				Default (if default-value="") is /solr
			-->
			<argument name="context-root" is-required="false" default-value=""/>
			<!-- CONFIGURE METRIC PATH (OPTIONAL):
				Default (if default-value="") is "Custom Metrics|Solr|" 
			 -->
			<argument name="metric-prefix" is-required="false" default-value=""/>
			
		</task-arguments>
		<java-task>
		      <classpath>solr-monitoring-extension.jar</classpath>
		          <impl-class>com.appdynamics.extensions.solr.SolrMonitor</impl-class>
		</java-task>
	</monitor-run-task>
</monitor>
